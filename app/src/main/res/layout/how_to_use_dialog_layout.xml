<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green2"
            android:text="How to Use"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="13.3sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/number_shape"
                    android:text="1"
                    android:lineSpacingExtra="2.7sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black2"
                    android:layout_marginTop="3dp"
                    android:text="Open WhatsApp"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/how_to_use_one"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="13.3sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/number_shape"
                    android:text="2"
                    android:lineSpacingExtra="2.7sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black2"
                    android:layout_marginTop="3dp"
                    android:text="View wanted status"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/how_to_use_two"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="13.3sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/number_shape"
                    android:text="3"
                    android:lineSpacingExtra="2.7sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black2"
                    android:layout_marginTop="3dp"
                    android:text="Come back again"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/how_to_use_three"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/got_it"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="20dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="#ff9020"
            android:text="Got It"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif"/>

</LinearLayout>
